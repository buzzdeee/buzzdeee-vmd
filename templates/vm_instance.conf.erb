# This file is maintained via Puppet

vm "<%= @title %>" {
  <%- if @enable -%>
  enable
  <%- else -%>
  disable
  <%- end -%>
  memory <%= @memory %>
  <%- if @boot -%>
  boot "<%= @boot %>"
  <%- end -%>
  disk <%= @disk %>

  <%- if @interfaces -%>
    <% @interfaces.each do |interface, params| -%>
  interface {
    <%- if @params['group'] -%>
    group <%= @params['group'] %>
    <%- end -%>
    <%- if @params['lladdr'] -%>
    lladdr "<%= @params['lladdr'] %>"
    <%- end -%>
    <%- if @params['rdomain'] -%>
    rdomain <%= @params['rdomain'] %>
    <%- end -%>
    <%- if @params['switch'] -%>
    switch "<%= @params['switch'] %>"
    <%- end -%>
    <%- if @params['enable'] -%>
    up
    <%- else -%>
    down
    <%- end -%>
  }
  <%- end -%>

  <%- if @owner -%>
  owner <%= @owner %>
  <%- end -%>
}
